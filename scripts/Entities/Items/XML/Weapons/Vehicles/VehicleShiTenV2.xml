<item name="VehicleShiTenV2" class="VehicleWeapon" invisible="1"  weaponParams="1">
	<params>
		<param name="giveable" 		value="0" />
		<param name="selectable" 	value="0" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="1" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="1" />
		<param name="pose" 				value="rifle" />
		<mount>			
			<param name="pivot" value="weapon" />
			<param name="left_hand_helper" value="grip_left" />
			<param name="right_hand_helper" value="grip_right" />
		</mount>
	</params>

	<ai_descriptor handler="instant" speed="400" damage_radius="-1" charge_time="1"
	 coverFireTime="6" spreadRadius="2.5" draw_time="2.0" sweep_width="3.0" sweep_frequency="1.5"
	 burstBulletCountMin="25" burstBulletCountMax="40" burstPauseTimeMin="0.8" burstPauseTimeMax="2.0" singleFireTriggerTime="-1"
	 />

	<ammos>
		<ammo name="MGbullet" extra="0" amount="0" />
	</ammos>
	<geometry>
		<firstperson name="objects/weapons/asian/shi_ten/shi_ten_vehicle.chr" angles="0,0,0" position="0,0,0"/>
    <thirdperson name="objects/weapons/asian/shi_ten/shi_ten_tp_vehicle.cgf" angles="0,0,180" position="0,0,0"/>
		<boneAttachments>
			<attachment target="firstperson" name="muzzle_flash_effect" bone="weapon_term" />
			<attachment target="firstperson" name="muzzle_flash_light" bone="weapon_term" />		
			<attachment target="firstperson" name="overheat_effect" bone="weapon_term" />	
		</boneAttachments>
	</geometry>
	
	<actions>		
		<action name="select">
			<animation target="firstperson" name="select_vehicle_01" camera_helper="camera_helper" />									
			<sound target="firstperson" name="sounds/weapons:shiten:select" radius="5" />
			<sound target="thirdperson" name="sounds/weapons:shiten:select" radius="5" />
		</action>		
		<action name="idle">
			<animation target="firstperson" name="idle_vehicle_%suffix%01" camera_helper="camera_helper" />					
		</action>		
		<action name="fire">
			<animation target="firstperson" name="fire_vehicle_%suffix%01" camera_helper="camera_helper" />			
			<sound target="firstperson" name="sounds/weapons:shiten:fire_fp_single%env%" radius="100" static="1" />
			<sound target="thirdperson" name="sounds/weapons:shiten:fire_3rd_single%env%" radius="100" static="1" />
			<forceFeedback time="0.10" amplifierA="0.4" amplifierB="0.30" combatModeMultiplier="1.0" />
		</action>
		<action name="rapid_fire">
			<sound target="firstperson" name="sounds/weapons:shiten:fire_fp_loop" radius="100" static="1" synched="1"/>
			<sound target="thirdperson" name="sounds/weapons:shiten:fire_3rd_loop" radius="100" static="1" synched="1"/>
			<forceFeedback time="0.10" amplifierA="0.4" amplifierB="0.30" combatModeMultiplier="1.0" />
		</action>		
		<action name="spin_down">
			<sound target="firstperson" name="sounds/weapons:shiten:fire_fp_tail%env%" radius="5" static="1" />
			<sound target="thirdperson" name="sounds/weapons:shiten:fire_3rd_tail%env%" radius="5" static="1" />
		</action>
		<action name="zoom_in">
			<animation target="firstperson" name="zoom_in_vehicle_%suffix%01" camera_helper="camera_helper" />
		</action>
		<action name="zoom_out">
			<animation target="firstperson" name="zoom_out_vehicle_%suffix%01" camera_helper="camera_helper"/>
		</action>		
		<action name="overheating">
			<sound target="firstperson" name="sounds/weapons:shiten:overheat" radius="5" static="0" />
			<sound target="thirdperson" name="sounds/weapons:shiten:overheat" radius="5" static="0" />
			<forceFeedback time="0.3" amplifierA="0.0" amplifierB="0.15" combatModeMultiplier="1.0" />
		</action>
		<!--
		<action name="cooldown">
			<sound target="firstperson" name="sounds/weapons:heavymachinegun:cooldown_fp" radius="5" static="0" />
			<sound target="thirdperson" name="sounds/weapons:heavymachinegun:cooldown_3rd" radius="5" static="0" />
		</action>	
		-->
	</actions>
		
	<firemodes>
		<firemode name="Rapid" type="Rapid">
			<fire>
				<param name="ammo_type" value="MGbullet" />
				<param name="rate" value="800" />
				<param name="damage" value="150" />
				<param name="clip_size" value="-1" />
				<param name="autozoom" value="0" />
				<param name="helper_fp" value="weapon_term" />
				<param name="helper_tp" value="weapon_term" />				
				<param name="crosshair_assist_range" value="100" />
				<param name="secondary_damage" value="1" />
				<param name="ai_vs_player_damage" value="20"/>
			</fire>
			<heating>
				<param name="attack" value="0.058" />
				<param name="duration" value="2.5" />
				<param name="decay" value="1.6" />
				<param name="helper_fp" value="overheat_effect" />
				<param name="effect_fp" value="weapon_fx.gun.overheat_haze" />
				<param name="helper_tp" value="overheat_effect" />
				<param name="effect_tp" value="weapon_fx.gun.overheat_haze" />
			</heating>
			<tracer>
				<param name="geometryFP" 	value="Objects\effects\tracer_standard_new.cgf" />
				<param name="geometry" 	value="Objects\effects\tracer_standard_new.cgf" />
				<param name="effectFP" 		value="weapon_fx.tracer.standardfp" />
				<param name="effect" 		value="weapon_fx.tracer.standard" />
				<param name="speed" 		value="350" />
				<param name="speedFP"   value="350" />
				<param name="frequency" value="1" />
				<param name="helper_fp" value="dummy" />
				<param name="helper_tp" value="dummy" />
			</tracer>
			<rapid>
				<param name="min_speed" value="0.001" />
				<param name="max_speed" value="0.001" />
				<param name="acceleration" value="3.0" />
				<param name="deceleration" value="-3.0" />
								
				<param name="camshake_rotate" value="0,0.005,0" />
				<param name="camshake_shift" value="0,0.005,0" />
				<param name="camshake_perShot" value="2.0" />
			</rapid>
			<recoil>
				<param name="max_recoil"	value="2" />
				<param name="attack" 			value="0.4" />
				<param name="decay" 			value="0.5" />
				<param name="maxx" 				value="0.7" />
				<param name="maxy" 				value="1.0" />
				<param name="randomness" 	value="0.05" />
				<hints>
					<hint x="0.01" 	y="0.20" />
					<hint x="-0.02" 	y="0.10" />
					<hint x="0.15" 	y="0.15" />
					<hint x="-0.35" 	y="0.25" />					
					<hint x="0.30" 	y="0.50" />
					<hint x="-0.45"	y="0.30" />
					<hint x="0.20" 	y="0.45" />
					<hint x="-0.35" 	y="0.55" />
					<hint x="0.30" 	y="0.25" />
					<hint x="-0.25" 	y="0.20" />
					<hint x="0.40" 	y="0.20" />
					<hint x="-0.10" 	y="0.45" />
					<hint x="0.20" 	y="0.3" />
					<hint x="-0.30" 	y="0.2" />
					<hint x="0.25"	y="0.4" />		
				</hints>
			</recoil>	
			<spread>
				<param name="min" value="2.5" />
				<param name="max" value="4.0" />
				<param name="attack" value="0.4" />
				<param name="decay" value="0.7" />
			</spread>
			<muzzleflash>
				<firstperson effect="muzzleflash.Machinegun.ShiTen" helper="muzzle_flash_effect" light_radius="2" light_helper="muzzle_flash_light" light_time="0.01" light_diffuse_mult="8" />
				<thirdperson effect="muzzleflash.Machinegun.ShiTen_tp" helper="muzzle_flash_effect_tp" light_radius="2.3" light_helper="muzzle_flash_light" light_time="0.01" light_diffuse_mult="8" />
			</muzzleflash>
			<reject>
				<firstperson effect="weapon_fx.shells.vehicleshiten" helper="shells" />
				<thirdperson effect="weapon_fx.shells.vehicleshiten" helper="shells" />
			</reject>
		</firemode>
	</firemodes>
	<zoommodes>
		<zoommode name="ironsight" type="IronSight">
			<zoom>
				<param name="suffix" value="ironsight_" />
				<param name="dof_mask" value="textures/weapons/ironzoom_blurmask.dds" />
				<param name="zoom_in_time" value="0.2" />
				<param name="zoom_out_time" value="0.2" />
				<stages>
					<stage value="1.4" />
				</stages>
			</zoom>
			<spreadMod>
        		  <param name="max_mod" value="0.3"/>
        		  <param name="min_mod" value="0.2"/>
        		</spreadMod>
						<recoilMod>
						<param name="maxx_mod" value="0.75" />
		        <param name="maxy_mod" value="0.75" />
        		</recoilMod>
        	</zoommode>		
	</zoommodes>
</item>
